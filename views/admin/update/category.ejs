<section class="h-full">
	<div class="relative h-full bg-white">
		<div
			class="flex flex-col h-full min-h-full gap-2 p-4 mx-auto shadow-md sm:p-6 lg:max-w-7xl lg:p-8"
		>
		<h2 class="text-3xl font-light">Category details</h2>

			<form method="post" class="flex items-end gap-4">
				<div>
					<label for="name" class="block text-sm font-medium leading-6 text-gray-900">Name:</label>
					<input type="text" name="name" id="name" value="<%= category.name %>" required
						class="block w-full rounded-md border-0 py-1.5 pl-7 pr-20 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" />
				</div>
				
				<input type="hidden" name="id" value="<%= category._id %>">
				<div class="flex items-center gap-2">
					<button
					type="submit"
						class="p-1 px-4 transition-all bg-blue-600 rounded w-max hover:bg-blue-800 text-neutral-50"
					>
						Update
					</button>
					<a href="<%= category.name %>/delete" class="p-1 px-4 transition-all bg-red-600 rounded w-max hover:bg-red-800 text-neutral-50">
						Delete
					</a>
				</div>
			</form>
			<% if(success_msg !='' ){ %>
				<span class="text-sm font-medium text-green-600">
					<%= success_msg %>
				</span>
				<% } %> <% if(error_msg !='' ){ %>
				<span class="text-sm font-medium text-red-600"> <%= error_msg %> </span>
				<% } %> <% if(error !='' ){ %>
				<span class="text-sm font-medium text-red-600"> <%= error %> </span>
				<% } %>
		</div>
	</div>
</section>
