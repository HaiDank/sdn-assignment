<form
	action="/admin/orchids"
	method="get"
	class="flex items-center justify-center shadow-md max-h-max"
>
	<input
		type="text"
		name="search"
		placeholder="Search orchids..."
		class="w-full h-full p-3 px-6 rounded-lg"
	/>
</form>
<section class="h-full">
	<div class="relative h-full bg-white">
		<div
			class="flex flex-col items-center h-full max-w-2xl min-h-full gap-2 p-4 mx-auto shadow-md sm:p-6 lg:max-w-7xl lg:p-8"
		>
			<div class="flex items-center w-full">
				<h2 class="text-3xl font-light">Create Orchid</h2>
			</div>
			<form autocomplete="off" method="post" class="flex flex-col w-1/2 gap-2 my-6">
				<div class="flex flex-col w-full">
					<label for="name" class="font-medium">Name</label>
					<div>
						<input
							class="w-full p-2 px-4 bg-white border rounded-md border-neutral-500/50"
							id="name"
							name="name"
							required
							type="text"
							placeholder="Orchid name..."
						/>
					</div>
				</div>
				<div class="flex flex-col w-full">
					<label for="imageUrl" class="font-medium">Image Url</label>
					<div>
						<input
							class="w-full p-2 px-4 bg-white border rounded-md border-neutral-500/50"
							id="imageUrl"
							name="imageUrl"
							type="imageUrl"
							minlength="6"
							required
							placeholder="Image URL..."
						/>
					</div>
				</div>
				<div class="flex items-center justify-between w-full gap-4">
					<div class="flex flex-col flex-1">
						<label for="origin" class="font-medium"
							>Country of origin</label
						>
						<div>
							<input
								class="w-full p-2 px-4 bg-white border rounded-md border-neutral-500/50"
								id="origin"
								name="origin"
								type="text"
								required
								placeholder="Country..."
							/>
						</div>
					</div>
					<div class="flex flex-col flex-1">
						<label for="origin" class="font-medium">Category</label>
						<div>
							<input
								class="w-full p-2 px-4 bg-white border rounded-md border-neutral-500/50"
								id="category"
								list="categoryList"
								name="category"
								type="text"
								required
								placeholder="Category name..."
							/>
							<datalist id="categoryList">
								<% if (typeof categories !='undefined') { %> <%
								categories.forEach(category => { %>
								<option value="<%= category.name %>">
									<% }) %> <% } %>
								</option>
							</datalist>
						</div>
					</div>
				</div>
				<div class="flex items-center w-full gap-4">
					<label for="isNatural" class="font-medium"
						>Is it natural?</label
					>
					<ul
						class="flex items-center text-sm font-medium text-gray-900 bg-white border divide-x rounded-lg border-neutral-500/50 divide-neutral-500/50 w-max"
					>
						<li class="px-4 w-max">
							<div class="flex items-center">
								<input
									id="is-natural-true"
									type="radio"
									value="true"
									name="isNatural"
									class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500"
								/>
								<label
									for="is-natural-true"
									class="w-full py-3 text-sm font-medium text-gray-900 ms-2"
									>Yes
								</label>
							</div>
						</li>
						<li class="px-4 w-max">
							<div class="flex items-center">
								<input
									id="it-natural-false"
									type="radio"
									value="false"
									name="isNatural"
									checked
									class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500"
								/>
								<label
									for="it-natural-false"
									class="w-full py-3 text-sm font-medium text-gray-900 ms-2"
									>No</label
								>
							</div>
						</li>
					</ul>
				</div>
				<% if(success_msg !='' ){ %>
					<span class="text-sm font-medium text-green-600">
						<%= success_msg %>
					</span>
				<% } %> <% if(error_msg !='' ){ %>
					<span class="text-sm font-medium text-red-600">
						<%= error_msg %>
					</span>
				<% } %> <% if(error !='' ){ %>
					<span class="text-sm font-medium text-red-600">
						<%= error %>
					</span>
				<% } %>

				<div
					class="flex flex-col items-end justify-center w-full gap-2"
				>
					<button
						type="submit"
						class="p-2 px-4 transition-all bg-green-600 rounded-md min-w-24 text-neutral-50 hover:bg-green-800 hover:text-neutral-200"
					>
						Create
					</button>
				</div>
			</form>
		</div>
	</div>
</section>
